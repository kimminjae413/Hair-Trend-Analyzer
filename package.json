{
  "name": "hair-trend-analyzer",
  "version": "1.0.0",
  "description": "ðŸŽ¨ AI-powered hair trend analysis and content planning platform for hair designers",
  "main": "server/server.js",
  "keywords": [
    "hair",
    "trend",
    "ai",
    "analysis",
    "content",
    "beauty",
    "youtube",
    "instagram",
    "designer",
    "salon",
    "openai",
    "automation"
  ],
  "author": {
    "name": "HairTrend AI Team",
    "email": "support@hairtrend.ai",
    "url": "https://hairtrend.ai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/hair-trend-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/hair-trend-analyzer/issues"
  },
  "homepage": "https://github.com/yourusername/hair-trend-analyzer#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/server.js",
    "client:dev": "react-scripts start",
    "build": "react-scripts build",
    "build:server": "echo 'Server build completed'",
    "start": "node server/server.js",
    "test": "react-scripts test",
    "test:server": "jest server/**/*.test.js",
    "test:all": "npm run test && npm run test:server",
    "eject": "react-scripts eject",
    "lint": "eslint src server --ext .js,.jsx",
    "lint:fix": "eslint src server --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css}\" \"server/**/*.js\" \"*.{js,md}\"",
    "docker:build": "docker build -t hair-trend-analyzer .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 hair-trend-analyzer",
    "docker:dev": "docker-compose up --build",
    "deploy": "npm run build && npm run deploy:server",
    "deploy:server": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop hair-trend-api",
    "pm2:restart": "pm2 restart hair-trend-api",
    "pm2:logs": "pm2 logs hair-trend-api",
    "setup": "npm install && cp .env.example .env && echo 'Setup completed! Please edit .env file.'",
    "clean": "rm -rf node_modules build logs/*.log",
    "analyze": "npm run build && npx source-map-explorer build/static/js/*.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "openai": "^4.20.1",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "google-spreadsheet": "^4.1.2",
    "google-auth-library": "^9.4.1",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "node-cache": "^5.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-react-app": "^7.0.1",
    "prettier": "^3.1.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "source-map-explorer": "^2.5.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:3001",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/**/*.test.js"
    ]
  }
}
